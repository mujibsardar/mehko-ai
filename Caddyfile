{
  email admin@mehko.ai
}

api.mehko.ai {
  encode zstd gzip
  log {
    output stdout
    format json
  }

  # Health endpoint served by Caddy itself
  @health path /health
  header @health Content-Type application/json
  respond @health "{\"ok\":true}" 200

  # All API routes go to Python FastAPI (single backend)
  reverse_proxy mehko-fastapi-worker:8000
}
